{
	"compilerOptions": {
		"declaration": false,
		"experimentalDecorators": true,
		"importHelpers": true,
		"jsx": "react",
		"jsxFactory": "tsx",
		"module": "umd",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"outDir": "_build/",
		"sourceMap": true,
		"strict": true,
		"target": "es2016",
		"types": [
			"chrome",
			"intern",
			"browser"
		]
	},
	"include": [
		"./src/**/*.ts",
		"./tests/**/*.ts"
	]
}
